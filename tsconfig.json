{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"paths": {
			"~*": ["./*"]
		},
		"esModuleInterop": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": "src",
		"sourceRoot": "/",
		"inlineSources": true,
		"incremental": true,
		"noUnusedLocals": false,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"strictBindCallApply": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"lib": ["es2020.string"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "data", "guidelines"]
}
